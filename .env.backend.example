# Public port exposed on EC2 host
BACKEND_PUBLIC_PORT=8008

# MQTT runtime
BROKER=a19mijesri84u2-ats.iot.us-east-1.amazonaws.com
MQTT_PORT=8883

# Frontend (Vercel) allowed to call API
CORS_ALLOWED_ORIGINS=https://SEU_FRONTEND.vercel.app

# Cross-domain auth cookie for Vercel -> AWS API
AUTH_COOKIE_SAMESITE=None
AUTH_COOKIE_SECURE=1
AUTH_BASE_URL=https://SEU_BACKEND_API

# 24/7 mode (no manual "apply" from dashboard required)
REQUIRE_APPLY_TO_START=0
HISTORY_MODE=merge

# Recommended runtime limits for small instances (t2.micro / 1 GiB RAM)
# Reduces JSON snapshot churn, API cache misses and probe write volume.
# You can keep these values on larger machines too.
DASHBOARD_REFRESH_SEC=20
API_STATE_CACHE_TTL_SEC=5
API_QUALITY_CACHE_TTL_SEC=5
MAX_EVENTS_PER_PIVOT=800
MAX_EVENTS_PER_PIVOT_PANEL=800
MAX_EVENTS_PER_PIVOT_LIST=400
PROBE_DEFAULT_INTERVAL_SEC=900
PROBE_MIN_INTERVAL_SEC=180

# Fixed admin seed
AUTH_FIXED_ADMIN_ENABLED=1
AUTH_FIXED_ADMIN_EMAIL=admin@exemplo.com
AUTH_FIXED_ADMIN_PASSWORD=troque-essa-senha

# Optional SMTP (keep console in initial setup)
AUTH_EMAIL_MODE=console
